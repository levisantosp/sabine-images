{
  "compilerOptions": {
    "target": "ES2023",
    "module": "nodenext",
    "lib": ["ES2023", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "rewriteRelativeImportExtensions": true,
    "verbatimModuleSyntax": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.json",
    "env.d.ts",
    "src"
  ],
  "exclude": ["node_modules"]
}